{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@clients/*": ["src/clients/*"],
      "@entities/*": ["src/entities/*"],
      "@errors/*": ["src/errors/*"],
      "@gqltypes/*": ["src/gqltypes/*"],
      "@modules/*": ["src/modules/*"],
      "@factories/*": ["test/factories/*"]
    }
  }
}
